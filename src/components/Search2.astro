<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchLink = document.querySelector('a[href="#s"]');
    searchLink?.addEventListener("click", (e) => {
      console.log("Search link clicked");
      const openModalButton = document.querySelector<HTMLButtonElement>(
        "site-search [data-open-modal]"
      );
      setTimeout(() => {
        if (openModalButton) {
          openModalButton.click();
        }
      }, 50); // Wait for 50 milliseconds
      if (!openModalButton) return;
      openModalButton.click();
      console.log("3");

      const input =
        document.querySelector<HTMLInputElement>("site-search input");
      if (!input) return;
      input.value = "";
      input.dispatchEvent(
        new InputEvent("input", { bubbles: true, cancelable: true })
      );
    });
  });

  
</script>
